                    <select asp-for="LeaveCategory" class="form-control" asp-items="Html.GetEnumSelectList<Koon.Models.Leave.LeaveCategory>()">
                        <option selected="selected" value="">----Please Select Leave Type----</option>
                    </select>
                    <span asp-validation-for="LeaveCategory" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ReasonForLeave" class="control-label required"></label>
                    <input asp-for="ReasonForLeave" class="form-control" />
                    <span asp-validation-for="ReasonForLeave" class="text-danger"></span>
                </div>
