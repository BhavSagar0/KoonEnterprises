                <div class="form-group" align="left">
                    <button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter" asp-action="Apply" id="btnSubmit">
                        Apply Leave
                    </button>
                    <button class="btn btn-primary" asp-controller="Employee" asp-action="Details" asp-route-id="@ViewBag.EmpId">Back to Details</button>
                </div>
                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLongTitle">Success</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
